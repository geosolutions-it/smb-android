<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	xmlns:tools="http://schemas.android.com/tools"
	xmlns:card_view="http://schemas.android.com/apk/res-auto"

	android:layout_height="wrap_content"
	android:layout_width="match_parent"
	card_view:cardMaxElevation="2dp"
	card_view:cardElevation="4dp"
	card_view:contentPadding="5dp"
	android:layout_margin="8dp"
	android:layout_marginEnd="8dp"
	android:layout_marginStart="8dp"
	android:layout_marginTop="8dp"
	android:padding="8dp"
	card_view:cardCornerRadius="8dp"
	>

	<android.support.constraint.ConstraintLayout
		android:id="@+id/item_sponsor"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:orientation="vertical">

		<TextView
			android:id="@+id/sponsor_header"
			android:layout_width="0dp"
			android:layout_height="wrap_content"
			android:layout_marginEnd="8dp"
			android:layout_marginStart="8dp"
			android:layout_marginTop="8dp"
			android:textColor="@color/colorPrimary"
			tools:text="sponsor header"
			android:textAlignment="center"
			app:layout_constraintEnd_toEndOf="parent"
			app:layout_constraintStart_toStartOf="parent"
			app:layout_constraintTop_toTopOf="parent" />

		<ImageView
			android:id="@+id/sponsor_image"
			android:layout_width="365dp"
			android:layout_height="86dp"
			android:layout_marginEnd="8dp"
			android:layout_marginStart="8dp"
			android:layout_marginTop="8dp"
			android:scaleType="fitCenter"
			android:src="@drawable/ic_trophy"
			app:layout_constraintEnd_toEndOf="parent"
			app:layout_constraintStart_toStartOf="parent"
			app:layout_constraintTop_toBottomOf="@+id/sponsor_header">

		</ImageView>


		<TextView
			android:id="@+id/sponsor_description"
			android:layout_width="0dp"
			android:layout_height="wrap_content"
			android:layout_marginEnd="8dp"
			android:layout_marginStart="8dp"
			android:layout_marginTop="8dp"
			android:layout_marginBottom="8dp"
			android:padding="8dp"
			android:textAlignment="center"
			android:textStyle="italic"
			app:layout_constraintEnd_toEndOf="parent"
			app:layout_constraintStart_toStartOf="parent"
			app:layout_constraintTop_toBottomOf="@+id/sponsor_image"
			tools:text="description" />


	</android.support.constraint.ConstraintLayout>
</android.support.v7.widget.CardView>
