<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
                android:background="@drawable/mode_bordered"
                android:layout_margin="5dp"
              android:orientation="vertical">

    <ImageView
        android:id="@+id/bike_image"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_alignParentTop="true"
        android:padding="20dp"
        app:srcCompat="@drawable/ic_directions_bike">
    </ImageView>


    <TextView
        android:id="@+id/bike_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/bike_image"
        android:fontFamily="sans-serif-light"
        android:gravity="center_horizontal|center_vertical"
        android:text="Bike 1"
        android:textSize="19.0sp"/>

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/bike_alarm"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:layout_marginEnd="10dp"
        android:tint="@android:color/white"
        app:borderWidth="2dp"
        app:elevation="8dp"
        app:fabSize="mini"
        app:srcCompat="@drawable/ic_report"
        app:backgroundTint="@android:color/holo_red_dark"
        android:layout_above="@+id/bike_title"
        android:layout_alignParentEnd="true"/>




</RelativeLayout>